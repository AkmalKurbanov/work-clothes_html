                a(href='#').underline Куртки зимние рабочие
              li
                a(href='#').underline Жилеты зимние рабочие
              li
                a(href='#').underline Полукомбинезоны и брюки зимние рабочие
              li
                a(href='#').underline Женская зимняя одежда
              li
                a(href='#').underline Нательное белье

