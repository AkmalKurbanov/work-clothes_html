.catalog
  .catalog__close
    span
    span
  .catalog__left-col
    .catalog__category.category
      ul
        mixin catalogCategory(icon, title, active)
          li.category__item
            a(href="#").category__item-wrap
              .category__icon 
                img(src=icon, alt="")  
              .category__title
                span=title

        +catalogCategory('assets/img/specodezhda-150x150.png','Спецодежда')    
        +catalogCategory('assets/img/rabochaya-obuv-150x150.png','Рабочая обувь')    
        +catalogCategory('assets/img/zatshita-ruk-150x150.png','Защита для рук')    
        +catalogCategory('assets/img/siz-150x150.png','СИЗ')    
        +catalogCategory('assets/img/drugoe-150x150.png','Другое')    

